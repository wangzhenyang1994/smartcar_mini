<launch> 
  <include file="$(find rplidar_ros)/launch/rplidar_a3.launch" />
  <include file="$(find simple_controller)/launch/simple_controller.launch">
    <arg name="ttyusb_port" value="/dev/ttyUSB0" />
  </include>
  <!-- <include file="$(find pid_controller)/launch/pid_controller.launch">
    <arg name="ttyusb_port" value="/dev/ttyUSB0" />
  </include> -->

  <node pkg="smartcar" name="cameranode" type="cameranode.py" output="screen">
    <param name="device" value="1"/>
    <param name="width" value="1280"/>
    <param name="height" value="720"/>
    <param name="rates" value="10"/>
  </node>
  <node pkg="smartcar" name="laneline_detection" type="laneline_detection.py" output="screen"/>
  <node pkg="smartcar" name="obstacle_detection" type="obstacle_detection.py" output="screen"/>
  <!-- <node pkg="smartcar" name="obstacle_detection_fake" type="obstacle_detection_fake.py" output="screen"/> -->
  <!-- <node pkg="smartcar" name="traffic_light_detection" type="traffic_light_detection.py" output="screen"/> -->
  <node pkg="smartcar" name="traffic_light_detection" type="traffic_light_detection_v2.py" output="screen"/>
  <node pkg="smartcar" name="velocity_decision" type="velocity_decision.py" output="screen"/>
</launch>